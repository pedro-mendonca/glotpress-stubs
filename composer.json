{
  "name": "pedro-mendonca/glotpress-stubs",
  "description": "GlotPress function and class declaration stubs for static analysis. ",
  "license": "MIT",
  "keywords": [
    "glotpress",
    "wordpress",
    "static analysis",
    "phpstan"
  ],
  "homepage": "https://github.com/pedro-mendonca/glotpress-stubs",
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/pedro-mendonca"
    }
  ],
  "require": {
    "php": "^7.3 || ^8.0"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.48.2",
    "php-stubs/generator": "^0.8.5",
    "php-stubs/wordpress-stubs": "^6.8.2",
    "glotpress/glotpress-wp": "^4.0.3"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/GlotPress/GlotPress.git"
    }
  ],
  "minimum-stability": "stable",
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true
    }
  },
  "scripts": {
    "generate": "generate-stubs --force vendor/glotpress/glotpress-wp --out=glotpress-stubs.php",
    "zip": [
      "composer install --no-dev",
      "composer archive --file=glotpress-stubs --format=zip",
      "composer install"
    ]
  }
}
